{
  "name": "heimr-chars",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "serve:firestore": "firebase serve --only firestore",
    "build": "vue-cli-service build",
    "test:unit": "vue-cli-service test:unit",
    "test:e2e": "vue-cli-service test:e2e",
    "lint": "vue-cli-service lint",
    "prettier": "prettier src/**/*.{ts,vue,json} --write",
    "scrape-heimr": "cd scripts && ts-node getHeimrDocs.ts",
    "deploy": "firebase deploy"
  },
  "dependencies": {
    "core-js": "^3.5.0",
    "firebase": "^7.6.0",
    "vue": "^2.6.10",
    "vue-class-component": "^7.0.2",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.3",
    "vuetify": "^2.1.14",
    "vuex": "^3.0.1",
    "vuexfire": "^3.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@firebase/testing": "^0.16.3",
    "@types/cheerio": "^0.22.13",
    "@types/jest": "^24.0.11",
    "@types/node": "latest",
    "@types/request": "^2.48.3",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "@vue/cli-plugin-babel": "^4.1.1",
    "@vue/cli-plugin-e2e-cypress": "^4.1.1",
    "@vue/cli-plugin-eslint": "^4.1.1",
    "@vue/cli-plugin-router": "^4.1.1",
    "@vue/cli-plugin-typescript": "^4.1.1",
    "@vue/cli-plugin-unit-jest": "^4.1.1",
    "@vue/cli-plugin-vuex": "^4.1.1",
    "@vue/cli-service": "^4.1.1",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^5.0.1",
    "@vue/test-utils": "1.0.0-beta.30",
    "cheerio": "^1.0.0-rc.3",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^6.0.1",
    "eslint-plugin-vue-a11y": "^0.0.31",
    "firebase-tools": "^7.7.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "request": "^2.88.0",
    "sass": "^1.19.0",
    "sass-loader": "^8.0.0",
    "ts-node": "^8.4.1",
    "typescript": "~3.7.3",
    "vue-cli-plugin-vuetify": "^2.0.1",
    "vue-template-compiler": "^2.6.10",
    "vuetify-loader": "^1.4.3",
    "webpack": "^4.41.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "plugin:vue-a11y/base",
      "@vue/prettier",
      "@vue/typescript"
    ],
    "rules": {
      "no-console": "off",
      "prettier/prettier": "off"
    },
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest/presets/typescript-and-babel"
  },
  "lint-staged": {
    "*.{ts,vue}": [
      "vue-cli-service lint",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "peerDependencies": {
    "webpack": "^4.41.2"
  }
}
